{
  "name": "nextjs-movies-app",
  "version": "0.1.5",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "cspell": "cspell \"{app,src,components,lib}/**/*.{ts,tsx,js,jsx,md}\"",
    "audit": "better-npm-audit audit",
    "deps:check": "npx depcheck",
    "deps:update": "npx npm-check-updates -i",
    "release": "standard-version -a && git push --follow-tags origin main",
    "release:dry": "standard-version --dry-run"
  },
  "dependencies": {
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@cspell/dict-es-es": "^3.0.8",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "better-npm-audit": "^3.11.0",
    "cspell": "^9.6.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
